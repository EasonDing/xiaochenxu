/*顶部标题 日期 阅读量  */

.weui-article {
  margin-bottom: 50px;
}
.weui-article__h1 {
  margin-bottom: 0;
}

.column_top_box {
  color: #808080;
  font-size: 25rpx;
  margin-bottom: 1em;
}

.reading {
  margin-left: 45rpx;
}

/*评论列表  */

.column_comment {
  display: flex;
  border-top:1rpx solid #e5e5e5;
  padding-top: 0.5em;
}

.comment_right_box {
  flex: 1;
}

.comment_detail_box {
  margin-left: 0.8em;
}

.user_logo {
  width: 80rpx;
  height: 80rpx;
}

.comment_date {
  color: #999;
  font-size: 25rpx;
  float: right;
}
.content {
  line-height: 80rpx;
  height: 80rpx;
}

/*回复评论  */

.foot_reply {
  position: fixed;
  bottom: 0;
  z-index: 999;
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  background: #fff;
}

.reply_input {
  margin: 5px;
  height: 80rpx;
  padding-left: 10px;
  border-radius: 5px;
  background-color: #e5e5e5;
  font-size: 30rpx;
}
.submit {
  height: 80rpx;
  line-height: 80rpx;
  margin: 5px;
  color: #69CB40;
}
