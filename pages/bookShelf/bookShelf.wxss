/* pages/bookShelf/bookShelf.wxss */

/*图书详情  */
.book_info {
  text-align: center;
}
.book_logo {
  width: 100px;
  height: 134px;
}
.book_name {
  font-size: 17px;
}
.book_author {
  font-size: 13px;
}
.book_introduction {
  text-indent: 2em;
  font-size: 13px;
  color: #666666;
  padding: 15px;
}

/*底部  */

.flex_foot {
  position: fixed;
  bottom: 0;
  z-index: 999;
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  background: #fff;
  height: 60px;
}

.price_box {
  line-height: 60px;
  padding-left: 15px;
  font-size: 13px;
}

.price_box .price {
  color: orange;
  font-size: 17px;
}
.flex_foot button {
  margin-top: 10px;
  height: 35px;
  line-height: 35px;
  width: 80px;
  margin-right: 15px;
}

.footer_btn {
  background: #5bc53f;
  color: #ffffff;
  font-size: 25rpx;
  padding: 0;
}