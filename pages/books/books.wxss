/* pages/books/books.wxss */

/*顶部导航栏  */
.page {
  height: 100%;
}

.top {
  padding-top: 10px;
  padding-bottom: 5px;
  text-align: center;
  font-size: 17px;
  background: #F7F7F7; 
}

.sweep {
  text-align: right;
  padding-right: 30px;
}

.sweep image {
  width: 17px;
  height: 17px;
}
.active{
  border-bottom: 2px solid #5BC53F;
  margin: 0 20rpx;
  padding-bottom: 5rpx;
  color: #5BC53F;
}

/*九宫格部分  */
.grids_box {
  padding: 20px 15px;
}
.weui-grids {
  border: 0;
  background: #F7F7F7; 
}

.weui-grid {
  padding: 20rpx;
  border: 0;
}

.weui-grid__icon {
  width: 100%;
  height: 280rpx;
  margin: 0 auto;
}

.weui-grid__icon image {
  display: block;
  width: 100%;
  height: 100%;
}

/*内容为空  */
.null {
  text-align: center;
  padding-top: 30px;
}
.null_img {
  width: 80px;
  height: 80px;
}
.null_text {
  font-size: 17px;
  color: #666666;
}
