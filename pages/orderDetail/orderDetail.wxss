/* pages/orderDetail/orderDetail.wxss */

.top {
  height: 60px;
  text-align: center;
  padding: 20px;
}

/*地址详情  */

.address_box {
  padding: 15px;
  font-size: 13px;
  color: #b6b6b6;
  border-top: 10px solid #f8f8f8;
}

.address_box .icon {
  width: 18px;
  height: 18px;
  margin-right: 10px;
}

.user_info {
  color: black;
}

/*用户  */

.user {
  border-top: 10px solid #f8f8f8;
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.user_logo {
  width: 35px;
  height: 35px;
}

.arrow_right {
  width: 16px;
  height: 16px;
}
.user view {
  font-size: 17px;
  padding-left: 15px;
}

.middle {
  padding: 10px 15px;
  background-color: #F8F8F8;
}
.middle .img {
  width: 60px;
  height: 80px;
}
.introduction {
  font-size: 13px;
  color: #8B8B8B;
  margin-left: 10px;
}
.introduction view:nth-child(1) {
  margin-top: 5px;
}
.middle .title {
  font-size: 17px;
  font-weight: 400;
  color: black;
}
.middle .price {
  font-size: 13px;
}
.bottom {
  text-align: right;
  color: orange;
  padding: 5px 15px;
  height: 30px;
}

/*订单编号 日期  */
.number {
  padding: 20px 15px;
  font-size: 13px;
  color: #8B8B8B;
  border-top: 10px solid #f8f8f8;
}
.footer {
  border-top: 10px solid #f8f8f8;
  height: 30px;
  padding: 10px 15px;
}
.footer button {
  float: right;
  width:85px;
  font-size:13px;
  line-height:2;
  border-radius: 3px;
}