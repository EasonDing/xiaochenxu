/* pages/buyBook/buyBook.wxss */

.page {
  background-color: #f8f8f8;
  height: 100vh;
}

/*图书信息  */
.book {
  background-color: #ffffff;
  margin-bottom: 10px;
}

.books_img {
  margin-right: 0.8em;
  width: 90px;
  height: 110px;
}

.author {
  margin-top: 15px;
}

.introduction {
  margin-top: 5px;
}
.book_detail_top {
  position: relative;
}

.book_detail_top .price {
  color: orange;
  position: absolute;
  right: 0;
  font-size: 17px;
}

/*地址信息  */
.address_box {
  font-size: 13px;
  background-color: #ffffff;
  padding: 15px;
  vertical-align: middle;
}
.phone {
  margin-left: 2em;
}
.address_icon {
  width: 16px;
  height: 16px;
  margin-top:12px;
  margin-right: 10px;
}
.arrow_right {
  width: 16px;
  height: 16px;
  margin-top:12px;
  position: absolute;
  right: 15px;
}

/*底部  */

.flex_foot {
  position: fixed;
  bottom: 0;
  z-index: 999;
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  background: #fff;
  height: 60px;
}

.price_box {
  line-height: 60px;
  padding-left: 15px;
  font-size: 13px;
}

.price_box .price {
  color: orange;
  font-size: 17px;
}

.flex_foot button {
  margin-top: 10px;
  height: 35px;
  line-height: 35px;
  width: 80px;
  margin-right: 15px;
}

.footer_btn {
  background: #5bc53f;
  color: #ffffff;
  font-size: 25rpx;
}
